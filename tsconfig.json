{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "ES2015",
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports":true,
    "skipLibCheck": true    
  },
  "exclude": [
    "node_modules",
    "typings",
    "dist/**/*",
    "pb_*"
  ]
}